<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginCustomerActivity">

    <TextView
        android:id="@+id/tvLoginCustomer"
        android:hint="Login Customer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_marginTop="25dp"
        android:textSize="25dp"
        android:textStyle="bold"
        />

    <EditText
        android:id="@+id/etnamacustomer"
        android:hint="Nama Customer"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/tvLoginCustomer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawablePadding="20dp"
        android:inputType="textPersonName"
        android:drawableStart="@drawable/ic_baseline_account_nama_24"/>
    <EditText
        android:id="@+id/etpassword"
        android:hint="Password"
        android:layout_marginTop="12dp"
        android:layout_below="@+id/etnamacustomer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:drawablePadding="20dp"
        android:drawableStart="@drawable/ic_baseline_lock_password_24"/>

    <Button
        android:id="@+id/btnLoginCustomer"
        android:layout_below="@id/etpassword"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Login Customer"
        android:textAlignment="center"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/tvCreateAccountCustomer"
        android:layout_below="@id/btnLoginCustomer"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="Have You Make Account"
        android:textSize="15dp"
        />
</RelativeLayout>
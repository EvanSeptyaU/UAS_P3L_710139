<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterPegawaiActivity">

    <TextView
        android:id="@+id/tvPleaseRegisterPegawai"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Register Pegawai"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="24sp"/>

    <EditText
        android:id="@+id/etnamapegawai"
        android:text="Nama Pegawai"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/tvPleaseRegisterPegawai"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawablePadding="20dp"
        android:inputType="textPersonName"/>
    <EditText
        android:id="@+id/etpassword"
        android:hint="Password"
        android:layout_marginTop="12dp"
        android:layout_below="@+id/etnamapegawai"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:drawablePadding="20dp"/>

    <EditText
        android:id="@+id/ettanggallahirpegawai"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etpassword"
        android:layout_marginTop="12dp"
        android:drawablePadding="20dp"
        android:hint="TTL"
        android:inputType="date" />
    <EditText
        android:id="@+id/etjeniskelaminpegawai"
        android:hint="Jenis Kelamin"
        android:layout_marginTop="12dp"
        android:layout_below="@+id/ettanggallahirpegawai"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:drawablePadding="20dp"/>
    <EditText
        android:id="@+id/etemailpegawai"
        android:hint="Email"
        android:layout_marginTop="12dp"
        android:layout_below="@+id/etjeniskelaminpegawai"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:drawablePadding="20dp"/>
    <EditText
        android:id="@+id/etnomorteleponpegawai"
        android:hint="Nomor Telepon"
        android:layout_marginTop="12dp"
        android:layout_below="@+id/etemailpegawai"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:drawablePadding="20dp"/>
    <EditText
        android:id="@+id/etfotopegawai"
        android:hint="Foto"
        android:layout_marginTop="12dp"
        android:layout_below="@+id/etnomorteleponpegawai"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:drawablePadding="20dp"/>
    <EditText
        android:id="@+id/etalamatpegawai"
        android:hint="Alamat"
        android:layout_marginTop="12dp"
        android:layout_below="@+id/etfotopegawai"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:drawablePadding="20dp"/>

    <Button
        android:id="@+id/btnRegisterPegawai"
        android:layout_below="@id/etalamatpegawai"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Login Pegawai"
        android:textAlignment="center"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/tvCreateAccountPegawai"
        android:layout_below="@id/btnRegisterPegawai"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="Already have account? Login Here"
        android:textSize="15dp"
        />


</RelativeLayout>
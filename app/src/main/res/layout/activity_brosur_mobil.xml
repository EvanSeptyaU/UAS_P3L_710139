<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BrosurMobil">
    <TextView
        android:id="@+id/tvbrosurmobil"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Brosur Mobil"
        android:textAlignment="center"
        android:layout_marginTop="15dp"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_marginBottom="15dp"
        android:textColor="@color/brosur"/>

    <EditText
        android:id="@+id/etSearchBrosur"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvbrosurmobil"
        android:drawableStart="@drawable/ic_baseline_search_24"
        android:hint="Cari Mobil...."
        android:imeOptions="actionSend"
        android:inputType="text" />

    <ImageView
        android:id="@+id/imgSedan"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_below="@+id/etSearchBrosur"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="-1dp"
        android:layout_marginEnd="2dp"
        android:src="@drawable/SEDAN" />
    <ImageView
        android:id="@+id/imgcitycar"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_below="@+id/imgSedan"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="-1dp"
        android:layout_marginEnd="2dp"
        android:src="@drawable/CITYCAR" />
    <ImageView
        android:id="@+id/imgSUV"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_below="@+id/imgcitycar"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="-1dp"
        android:layout_marginEnd="2dp"
        android:src="@drawable/SUV" />
    <ImageView
        android:id="@+id/imgMPV"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_below="@+id/imgSUV"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="-1dp"
        android:layout_marginEnd="2dp"
        android:src="@drawable/MPV" />

</RelativeLayout>
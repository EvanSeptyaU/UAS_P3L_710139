<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterDriverActivity">

    <TextView
        android:id="@+id/tvPleaseRegisterDriver"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="30dp"
        android:text="Register Driver"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/etnamadriver"
        android:drawableStart="@drawable/ic_baseline_account_nama_24"
        android:hint="Nama Driver"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/tvPleaseRegisterDriver"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawablePadding="20dp"
        android:inputType="textPersonName"/>
    <EditText
        android:id="@+id/etpassword"
        android:drawableStart="@drawable/ic_baseline_lock_password_24"
        android:hint="Password"
        android:layout_marginTop="12dp"
        android:layout_below="@+id/etnamadriver"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:drawablePadding="20dp"/>
    <EditText
        android:id="@+id/etalamatdriver"
        android:drawableStart="@drawable/ic_baseline_house_alamat_24"
        android:hint="Alamat"
        android:layout_marginTop="12dp"
        android:layout_below="@+id/etpassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:drawablePadding="20dp"/>
    <EditText
        android:id="@+id/ettanggallahirdriver"
        android:drawableStart="@drawable/ic_baseline_calendar_ttl_24"
        android:hint="Tempat Tanggal Lahir"
        android:layout_marginTop="12dp"
        android:layout_below="@+id/etalamatdriver"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="date"
        android:drawablePadding="20dp"/>
    <EditText
        android:id="@+id/etjeniskelamindriver"
        android:drawableStart="@drawable/ic_baseline_jeniskelamin_24"
        android:hint="Jenis Kelamin"
        android:layout_marginTop="12dp"
        android:layout_below="@+id/ettanggallahirdriver"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:drawablePadding="20dp"/>
    <EditText
        android:id="@+id/etemaildriver"
        android:drawableStart="@drawable/ic_outline_attach_email_24"
        android:hint="Email"
        android:layout_marginTop="12dp"
        android:layout_below="@+id/etjeniskelamindriver"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:drawablePadding="20dp"/>
    <EditText
        android:id="@+id/etnomortelepondriver"
        android:drawableStart="@drawable/ic_outline_contact_phone_24"
        android:hint="Nomor Telepon"
        android:layout_marginTop="12dp"
        android:layout_below="@+id/etemaildriver"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:drawablePadding="20dp"/>
    <EditText
        android:id="@+id/etnomorsimdriver"
        android:drawableStart="@drawable/ic_baseline_add_card_24"
        android:hint="Nomor SIM"
        android:layout_marginTop="12dp"
        android:layout_below="@+id/etnomortelepondriver"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:drawablePadding="20dp"/>
    <EditText
        android:id="@+id/etfotodriver"
        android:drawableStart="@drawable/ic_baseline_add_to_photos_24"
        android:hint="Foto"
        android:layout_marginTop="12dp"
        android:layout_below="@+id/etnomorsimdriver"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType=""
        android:drawablePadding="20dp"/>
    <EditText
        android:id="@+id/etstatusdriver"
        android:drawableStart="@drawable/ic_baseline_event_available_24"
        android:hint="Status"
        android:layout_marginTop="12dp"
        android:layout_below="@+id/etfotodriver"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:drawablePadding="20dp"/>
    <EditText
        android:id="@+id/etbahasadriver"
        android:drawableStart="@drawable/ic_baseline_bahasa_24"
        android:hint="Bahasa"
        android:layout_marginTop="12dp"
        android:layout_below="@+id/etstatusdriver"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:drawablePadding="20dp"/>
    <EditText
        android:id="@+id/etsuratbebasnapza"
        android:drawableStart="@drawable/ic_baseline_add_to_photos_24"
        android:hint="Surat Bebas Napza"
        android:layout_marginTop="12dp"
        android:layout_below="@+id/etbahasadriver"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:drawablePadding="20dp"/>
    <EditText
        android:id="@+id/etsuratkesehatanjiwa"
        android:drawableStart="@drawable/ic_baseline_add_to_photos_24"
        android:hint="Surat Kesehatan Jiwa"
        android:layout_marginTop="12dp"
        android:layout_below="@+id/etsuratbebasnapza"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:drawablePadding="20dp"/>
    <EditText
        android:id="@+id/etsuratkesehatanjasmani"
        android:drawableStart="@drawable/ic_baseline_add_to_photos_24"
        android:hint="Surat Kesehatan Jasmani"
        android:layout_marginTop="12dp"
        android:layout_below="@+id/etsuratkesehatanjiwa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:drawablePadding="20dp"/>
    <EditText
        android:id="@+id/etskck"
        android:drawableStart="@drawable/ic_baseline_add_to_photos_24"
        android:hint="SKCK"
        android:layout_marginTop="12dp"
        android:layout_below="@+id/etsuratkesehatanjasmani"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:drawablePadding="20dp"/>
    <EditText
        android:id="@+id/ettarifdriver"
        android:drawableStart="@drawable/ic_baseline_attach_money_24"
        android:hint="Tarif Driver"
        android:layout_marginTop="12dp"
        android:layout_below="@+id/etskck"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:drawablePadding="20dp"/>

    <EditText
        android:id="@+id/etrerataratingdriver"
        android:drawableStart="@drawable/ic_baseline_stacked_bar_rerata_24"
        android:hint="Rata-rata Rating"
        android:layout_marginTop="12dp"
        android:layout_below="@+id/ettarifdriver"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:drawablePadding="20dp"/>
    <Button
        android:id="@+id/btnRegisterDriver"
        android:layout_below="@id/etrerataratingdriver"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Register Driver"
        android:textAlignment="center"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/tvCreateAccountDriver"
        android:layout_below="@id/btnRegisterDriver"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="Already have account? Login Here"
        android:textSize="15dp"
        />

</RelativeLayout>
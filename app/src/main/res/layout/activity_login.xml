<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="30dp"
    tools:context=".LoginActivity">

    <TextView
        android:id="@+id/tvPelaseLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Please Login"
        android:textAlignment="center"
        android:textSize="24sp"/>
    <Button
        android:id="@+id/btnLoginCustomer"
        android:layout_below="@id/tvPelaseLogin"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Login Customer"
        android:textAlignment="center"
        />

    <Button
        android:id="@+id/btnLoginDriver"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnLoginCustomer"
        android:layout_marginTop="11dp"
        android:text="LOGIN Driver"
        android:textAlignment="center" />
    <Button
        android:id="@+id/btnLoginPegawai"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnLoginDriver"
        android:layout_marginTop="11dp"
        android:text="Login Pegawai"
        android:textAlignment="center" />
    <Button
        android:id="@+id/btnLoginPemilikMobil"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnLoginPegawai"
        android:layout_marginTop="11dp"
        android:text="Login Pemilik Mobil"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/tvCreateAccount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnLoginPemilikMobil"
        android:layout_marginTop="13dp"
        android:text="Choose Your Login Session!"
        android:textAlignment="center"
        android:textSize="15dp" />

</RelativeLayout>
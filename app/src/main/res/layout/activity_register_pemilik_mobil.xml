<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterPemilikMobilActivity">

    <TextView
        android:id="@+id/tvPleaseRegisterPemilikMobil"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Register Pemilik Mobil"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textStyle="bold"/>

    <EditText
        android:id="@+id/etnamapemilikmobil"
        android:hint="Nama Pemilik"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/tvPleaseRegisterPemilikMobil"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawablePadding="20dp"
        android:inputType="textPersonName"/>
    <EditText
        android:id="@+id/etalamatpemilikmobil"
        android:hint="Alamat"
        android:layout_marginTop="12dp"
        android:layout_below="@+id/etpassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:drawablePadding="20dp"/>
    <EditText
        android:id="@+id/etnomorteleponpemilikmobil"
        android:hint="Nomor Telepon"
        android:layout_marginTop="12dp"
        android:layout_below="@+id/etalamatpemilikmobil"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:drawablePadding="20dp"/>
    <EditText
        android:id="@+id/etnomorktppemilikmobil"
        android:hint="Nomor KTP"
        android:layout_marginTop="12dp"
        android:layout_below="@+id/etnomorteleponpemilikmobil"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:drawablePadding="20dp"/>
    <EditText
        android:id="@+id/etpassword"
        android:hint="Password"
        android:layout_marginTop="12dp"
        android:layout_below="@+id/etnomorktppemilikmobil"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:drawablePadding="20dp"/>

    <Button
        android:id="@+id/btnRegisterPemilikMobil"
        android:layout_below="@id/etpassword"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Login Pemilik Mobil"
        android:textAlignment="center"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/tvCreateAccountPemilikMobil"
        android:layout_below="@id/btnRegisterPemilikMobil"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="Already have account? Login Here"
        android:textSize="15dp"
        />


</RelativeLayout>